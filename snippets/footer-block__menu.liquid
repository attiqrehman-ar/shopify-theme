{% assign menu = linklists[block.settings.menu] %}
{% if menu.links != blank %}
    <div class="{% if block.settings.title != blank or block_title != blank %}sf__accordion-content{% endif %} sf__footer-block-content">
        <ul class="pb-5 md:pb-0">
            {% for link in menu.links %}
                <li class="link-lv2 leading-8 hover-underline">
                    <a href="{{ link.url }}">
                        {{ link.title }}
                    </a>
                </li>
            {% endfor %}
        </ul>
    </div>
{% endif %}
