{
  "sections": {
    "collection-header": {
      "type": "collection-page-header",
      "settings": {
        "container": "container",
        "layout": "inside",
        "header_height": "medium",
        "text_alignment": "left",
        "vertical_alignment": "center",
        "text_color": "dark",
        "bg_color": "#ffffff",
        "bg_image": "{{ collection.image }}",
        "enable_parallax": false,
        "upper_title": false,
        "show_desc": true,
        "collection_all_desc": "<p>{{ collection.metafields.my_fields.brief | metafield_tag }}<\/p>"
      }
    },
    "main": {
      "type": "main-collection-product-grid",
      "settings": {
        "container": "container-fluid",
        "bg": "shopify:\/\/shop_images\/botanical_shadow_1_FINAL_1024x1024_86fc2093-e7a8-4da5-8985-67437c83955f.jpg",
        "grid_layout": "grid",
        "grid_columns": "4",
        "show_columns_switcher": false,
        "pagination_limit": 24,
        "paginate_type": "paginate",
        "show_sorting": false,
        "show_filter": false,
        "filters_type": "tags_filter",
        "sidebar": "leftColumn",
        "sidebar_title": "Filters",
        "limit_height_widget": false,
        "limit_height": 300,
        "change_product_variant_on_fitlering": false,
        "show_product_count": true,
        "collapsed_groups": "Brand, Vendor, Size",
        "color_swatches": "color,colour,couleur,farbe"
      }
    },
    "recent-viewed": {
      "type": "recent-viewed-products",
      "disabled": true,
      "settings": {
        "container": "container",
        "heading": "Recently Viewed Products",
        "limit": 8,
        "columns": 4,
        "column_gap": 30,
        "enable_slider": true
      }
    }
  },
  "order": [
    "collection-header",
    "main",
    "recent-viewed"
  ]
}
